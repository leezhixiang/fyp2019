{{> header}}

<nav class="navbar navbar-light bg-light" style="height: 3.5rem">
    <div class="container">
        <ul class="nav nav-pills-quizzes" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link-quizzes active" id="pills-quizzes-tab" data-toggle="pill" href="#pills-quizzes"
                    role="tab" aria-controls="pills-quizzes" aria-selected="true">My Quizzes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-quizzes" id="pills-favorites-tab" data-toggle="pill" href="#pills-favorites"
                    role="tab" aria-controls="pills-favorites" aria-selected="false">Favorites</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-quizzes" id="pills-shared-tab" data-toggle="pill" href="#pills-shared" role="tab"
                    aria-controls="pills-shared" aria-selected="false">Shared</a>
            </li>
        </ul>
    </div>
</nav>


<div class="container">
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-quizzes" role="tabpanel" aria-labelledby="pills-quizzes-tab">
            <div class="d-flex align-items-center mt-4">
                <h6 class="mb-0 mr-2">My quizzes (<span id="tQuizzes">0</span>)</h6>
                <div href="#" id="createQuizBtn" style="text-decoration: underline; cursor:pointer;color:#16d46b">
                    Create quiz</div>
            </div>
            <div class="row mt-4" id="myQuizList">
                <div class="col">
                    <div class="text-muted">No quizzes.</div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-favorites" role="tabpanel" aria-labelledby="pills-favorites-tab">
            <h6 class="mt-4">Favorite quizzes (<span id="tFavorites">0</span>)</h6>
            <div class="row mt-4" id="favoriteList">
                <div class="col">
                    <div class="text-muted"></div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-shared" role="tabpanel" aria-labelledby="pills-shared-tab">
            <h6 class="mt-4">Shared with me (<span id="tShares">0</span>)</h6>
            <div class="row mt-4" id="sharedList">
                <div class="col">
                    <div class="text-muted"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="deleteShareQuizModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Shared Quiz</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this shared quiz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="deleteShareQuizbtn">Delete</button>
            </div>
        </div>
    </div>
</div>