<div id="lobby" class="host-game">
    <div class="lobby-header">
        <p>Join at www.cls.com or CLS app with Game PIN:</p>
        <h1 id="gameId"></h1>
    </div>

    <div>
        <h2><span id="totalPlayers">0</span>Players</h2>
        <img class="img-thumbnail" src="/img/logo.png" alt="" height="70" width="70">
        <button id="startBtn">Start</button>
    </div>

    <div>
        <ul id="nameList"></ul>
    </div>

    <div class="lobby-footer">
        <h4>Waiting for players...</h4>
    </div>
</div>

<div id="hostGame" class="host-game hidden">
    <div class="host-game-header">
        <span class="exit">X</span>
        <h3 id="timer">00:00</h3>
        <button id="nextBtn">Next</button>
    </div>

    <div id="displayQuestion" class="host-game-content">
        <p id="question"></p>
    </div>

    <div id="summary" class="host-game-content hidden">
        <div class="block"><span class="total-chooses"></span>block 1</div>
        <div class="block"><span class="total-chooses"></span>block 2</div>
        <div class="block"><span class="total-chooses"></span>block 3</div>
        <div class="block"><span class="total-chooses"></span>block 4</div>
    </div>

    <div id="choices" class="host-game-content">
        <div class="choice">Choice 1</div>
        <div class="choice">Choice 2</div>
        <div class="choice">Choice 3</div>
        <div class="choice">Choice 4</div>
    </div>

    <div class="host-game-footer">
        <h3>Game PIN: <span id="gameId"></span></h3>
    </div>
</div>

<div id="gameOver" class="host-game hidden">
    <div class="host-game-header">
        <span class="exit">X</span>
        <h1>Game Over</h1>
    </div>
</div>