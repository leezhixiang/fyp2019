<div class="container" id="joinGame">
    <div class="row justify-content-center align-items-center vh-100" >
        <div class="col-sm-8 col-md-6 col-lg-4">
            <div class="card">
                <article class="card-body m-3 pt-4 pb-2">
                    <img src="/img/logo.png" alt="" height="130" width="130" class="d-block mx-auto mb-4 border">
                    <form id="joinGameForm">

                        <div id="loginAlert"></div>

                        <div class="form-group">
                            <input type="email" class="form-control" id="name" name="name" autocomplete="name"
                                placeholder="Display name">
                        </div>

                        <div class="form-group">
                            <input type="text" id="gameId" name="gameId" class="form-control" placeholder="Game PIN"
                                autocomplete="gameId" />
                        </div> <!-- form-group end.// -->

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Enter</button>
                        </div> <!-- form-group// -->

                    </form>
                    <div class="text-center">Discover more quizzes at <a href="/" id="here">here</a></div>
                </article> <!-- card-body end .// -->

                {{!-- <div class="border-top card-body text-center">No Account? <a href="/users/register">Sign Up</a></div> --}}
            </div> <!-- card.// -->
        </div> <!-- col.//-->
    </div>
</div>

<div id="playGame" class="play-game hidden">
    <div class="play-game-header">
        <span class="exit">X</span>
        <span id="questionIndex">0</span><span>/</span><span id="totalQuestion">0</span>
    </div>

    <div id="waitingStart" class="play-game-content hidden">
        <h1>You're in!</h1>
        <h4>See your name on screen?</h4>
    </div>

    <div id="waitingNext" class="play-game-content hidden">
        <h1>You're in!</h1>
        <h4>Waiting for next question to answer...</h4>
    </div>

    <div id="waitingOthers" class="play-game-content hidden"><span>Spinner</span></div>

    <div id="correct" class="play-game-content hidden"><span>Correct</span></div>

    <div id="wrong" class="play-game-content hidden"><span>Wrong</span></div>

    <div id="choices" class="play-game-content hidden">
        <button class="choice">Choice 1</button>
        <button class="choice">Choice 2</button>
        <button class="choice">Choice 3</button>
        <button class="choice">Choice 4</button>
    </div>

    <div class="play-game-footer">
        <span id="playerName"></span>
    </div>
</div>

<div id="gameOver" class="play-game hidden">
    <div class="play-game-header">
        <span class="exit">X</span>
        <h1>Game Over</h1>
    </div>
</div>