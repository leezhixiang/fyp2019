{{> header}}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="d-flex align-items-center mt-4">
                <h6 class="mb-0 mr-2">My classes (<span id="tClasses1">0</span>)</h6>
                <div href="#" id="createClassBtn" class="mr-2"
                    style="text-decoration: underline; cursor:pointer;color:#16d46b">
                    Create new</div>
            </div>
        </div>
    </div>
    <div class="row class-list mt-4">
        <div class="col">
            <div class="text-muted">No classes.</div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="d-flex align-items-center mt-4">
                <h6 class="mb-0 mr-2">Joined classes (<span id="tClasses2">0</span>)</h6>
                <div href="#" id="joinClassBtn" style="text-decoration: underline; cursor:pointer;color:#16d46b">
                    Join class</div>
            </div>
        </div>
    </div>
    <div class="row class-list--joined mt-4">
        <div class="col">
            <div class="text-muted">No classes.</div>
        </div>
    </div>
</div>





<!-- Modal -->
<div class="modal fade" id="createClassModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Create class</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="createClassAlert"></div>
                <form>
                    <div class="form-group">
                        <label for="className">Class name</label>
                        <input type="text" class="form-control" id="className" placeholder="XXXX1234 Class Name">
                    </div>
                    <div class="form-group">
                        <label for="section">Section: </label>
                        <input type="text" class="form-control" id="section" placeholder="May 2019/2020">
                    </div>
                    <div class="form-group">
                        <label for="section">Tutorial Group: </label>
                        <input type="number" class="form-control" id="group" pattern="[0-9]" name="quantity"
                            min="-999999" max="999999">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveClassBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>






<!-- Modal -->
<div class="modal fade" id="joinClassModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Join class</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="joinClassAlert"></div>
                <form>
                    <p>Ask your teacher for the class code, then enter it here.</p>
                    <div class="form-group">
                        <label for="className">Class code</label>
                        <input type="text" class="form-control" id="classCode" placeholder="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="JoinBtn">Join</button>
            </div>
        </div>
    </div>
</div>